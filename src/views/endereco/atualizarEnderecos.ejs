<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alterar Endereços</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/index.css">
</head>
<body>
    <div class="container-fluid d-flex">
        <%- include('../partials/sidebar.ejs') %>
        <div class="container text-center d-flex flex-column">
            <h2 class="text-center form-titulo mb-3">Alterar Dados dos Endereços</h2>
            <div name="dados-cliente">                
                <div class="cliente-section ">
                    <%- include('partials/enderecoFormulario.ejs', {enderecos: cliente.enderecos}) %>
                    <button class="btn btn-primary botao" id="btnSalvar" data-id="<%= cliente.id %>">Salvar Alterações</button>
                </div>
                <%- include('../partials/modal.ejs') %>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/endereco/atualizarEnderecosScript.js"></script>
</body>
</html>
