<div class="section active" id="dadosCliente" style="width: 100%;">
    <h3 class="d-flex justify-content-start mb-3 dados-titulo">
        <img src="/images/formCliente/user.svg" alt="client-icon" class="form-icon"> Dados do Cliente
    </h3>
    <div class="entry">
        <div class="mb-3">
            <label for="email" class="form-label d-flex justify-content-start">Digite seu e-mail:<span class="required">*</span></label>
            <input type="email" class="form-control w-100" name="email" id="email" required placeholder="Exemplo: ex@email.com"
                value="<%= cliente ? cliente.usuario.email : '' %>">
        </div>
        <% if (!cliente) { %>
            <div class="mb-3">
                <label for="senha" class="form-label d-flex justify-content-start">Digite a senha:<span class="required">*</span></label>
                <input type="password" class="form-control w-100" name="primeiraSenha" id="primeiraSenha" required>
            </div>
            <div class="mb-3">
                <label for="segundaSenha" class="form-label d-flex justify-content-start">Digite novamente a senha:<span class="required">*</span></label>
                <input type="password" class="form-control w-100" name="segundaSenha" id="segundaSenha" required>
            </div>
        <% } else { %>
            <input type="hidden" name="senha" id="senha" value="<%= cliente.usuario.senha %>">
        <% } %>
        <div class="mb-3">
            <label for="nome" class="form-label d-flex justify-content-start">Digite seu nome completo:<span class="required">*</span></label>
            <input type="text" class="form-control w-100" name="nome" id="nomeCompleto" required placeholder="Exemplo: Julia Salvador"
                value="<%= cliente ? cliente.usuario.nome : '' %>">
        </div>
        <div class="mb-3">
            <label for="cpf" class="form-label d-flex justify-content-start">Digite o seu CPF:<span class="required">*</span></label>
            <input type="text" class="form-control w-100" name="cpf" maxlength="11" id="cpf" required placeholder="Exemplo: 12345678900"
                value="<%= cliente ? cliente.cpf : '' %>">
        </div>
        <div class="mb-3">
            <label for="dtNascimento" class="form-label d-flex justify-content-start">Digite sua data de nascimento:<span class="required">*</span></label>
            <input type="date" class="form-control w-100" name="dtNascimento" id="dtNascimento" required
                value="<%= cliente ? cliente.dtNascimento : '' %>">
        </div>
        <div class="mb-3">
            <label for="genero" class="form-label d-flex justify-content-start">Selecione seu gênero:<span class="required">*</span></label>
            <select name="genero" class="form-select w-100" required>
                <option value="FEMININO" <%= cliente && cliente.genero === 'FEMININO' ? 'selected' : '' %>>Feminino</option>
                <option value="MASCULINO" <%= cliente && cliente.genero === 'MASCULINO' ? 'selected' : '' %>>Masculino</option>
                <option value="OUTRO" <%= cliente && cliente.genero === 'OUTRO' ? 'selected' : '' %>>Outro</option>
            </select>
        </div>
    </div>
    <h3 class="d-flex justify-content-start mb-3 dados-titulo">
        <img src="/images/formCliente/phone-call.svg" alt="phone-icon" class="form-icon"> 
        Dados do Telefone
    </h3>
    <div class="entry">
        <div class="mb-3">
            <label for="ddd" class="form-label d-flex justify-content-start">Digite o ddd do telefone:<span class="required">*</span></label>
            <input type="text" class="form-control w-100" name="ddd" id="ddd" maxlength="2" placeholder="Exemplo: 11"
                value="<%= cliente ? cliente.telefone.ddd : '' %>">
        </div>
        <div class="mb-3">
            <label for="telefone" class="form-label d-flex justify-content-start">Digite o número de telefone:<span class="required">*</span></label>
            <input type="text" class="form-control w-100" name="telefone" id="telefone" maxlength="9" required placeholder="Exemplo: 987456123" 
                value="<%= cliente ? cliente.telefone.numero : '' %>">
        </div>
        <label for="tipoTelefone" class="form-label d-flex justify-content-start">Selecione o tipo do telefone:<span class="required">*</span></label>
            <select name="tipoTelefone" class="form-select w-100" required>
                <option value="MOVEL" <%= cliente && cliente.telefone.tipo === 'MOVEL' ? 'selected' : '' %>>Móvel</option>
                <option value="FIXO" <%= cliente && cliente.telefone.tipo === 'FIXO' ? 'selected' : '' %>>Fixo</option>
            </select>
        </label>
    </div>
</div>
